generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  telefono  String?
  creadoEn  DateTime @default(now())
}

model Broker {
  id      Int    @id @default(autoincrement())
  nombre  String
  email   String @unique
}

model Cliente {
  id               Int      @id @default(autoincrement())
  documento        String   @unique
  nombre           String
  telefono         String?
  direccion        String?
  montosolicitado  Float
  banco            String
  estado           String   @default("Pendiente")
  fechaCreacion    DateTime @default(now())

  correo           String?
  barrio           String?
  ciudad           String?
  fechaNacimiento  DateTime?
  estadoCivil      String?
  nacionalidad     String?
  empresa          String?
  ruc              String?
  actividadEmpresa String?
  ingresos         Float?
  fechaCobro       DateTime?
  antiguedad       String?

  referencia1      String?
  relacion1        String?
  celular1         String?
  referencia2      String?
  relacion2        String?
  celular2         String?
  referencia3      String?
  relacion3        String?
  celular3         String?

  plazo            String?
  destino          String?
  coodeudor        Boolean  @default(false)

 documentos       Json?
}

model Mensaje {
  id        Int      @id @default(autoincrement())
  documento String
  nombre    String
  mensaje   String
  estado    String
  fecha     DateTime @default(now())
}

model Banco {
  id          Int     @id @default(autoincrement())
  entidad     String
  tasaInteres Float
}



